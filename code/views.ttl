hpview:RDFSResourceView a hpcom:View ;
    hpcom:view_target rdfs:Resource ;
    hpcom:view_template "https://harshp.com/code/templates/template_rdfs_resource.jinja2" ;
    hpcom:view_renderer hpcom:Jinja2 ;
    hpcom:sparql [
        a hpcom:SparqlQuery ;
        rdfs:label "incoming" ;
        hpcom:queryString """
            SELECT ?p ?o
            WHERE { 
                ?iri ?p ?o .
            }
            """ ;
        ] ;
    hpcom:sparql [
        a hpcom:SparqlQuery ;
        rdfs:label "outgoing" ;
        hpcom:queryString """
            SELECT ?s ?p
            WHERE { 
                ?s ?p ?iri .
            } ORDER BY DESC(?s)
            """ ;
        ] .

